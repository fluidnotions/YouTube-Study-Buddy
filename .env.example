CLAUDE_API_KEY=

# ML Model Configuration
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
# Claude transcription model
GENERATE_NOTES_MODEL=claude-sonnet-4-5-20250929

# Tor Proxy Configuration (optional)
TOR_HOST=127.0.0.1
TOR_PORT=9050
USE_TOR=false

# RAG (Retrieval-Augmented Generation) Configuration
# Enable/disable RAG-powered semantic cross-referencing
RAG_ENABLED=true
# Sentence transformer model for embeddings (all-mpnet-base-v2 recommended for quality)
RAG_MODEL=all-mpnet-base-v2
# Minimum similarity score threshold (0-1, lower = more results, higher = more precise)
RAG_SIMILARITY_THRESHOLD=0.3
# Maximum number of cross-references per section
RAG_MAX_RESULTS=5
# Batch size for embedding generation (higher = faster but more memory)
RAG_BATCH_SIZE=32
# ChromaDB persistence directory (Docker: /app/.chroma_db, Local: ./.chroma_db)
CHROMA_PERSIST_DIR=/app/.chroma_db
# Model cache directory (Docker: /app/.cache, Local: ~/.cache)
MODEL_CACHE_DIR=/app/.cache